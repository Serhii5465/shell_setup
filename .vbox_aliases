DEST_UUID_DELL_INSPIRON_3576="345837F85837B806"
DEST_UUID_MSI_GF63="347E0E947E0E4F54"

MNT_POINT_EXT_DRIVE="/cygdrive/r"

MSI_SRC_HDD="/cygdrive/e"
MSI_SRC_SSD="/cygdrive/d"

DELL_SRC_SSD="/cygdrive/d"

XUBUNTU_VM="Xubuntu"
UBUNTU_SER_VM="Ubuntu_Server"
WIN10_VM="Windows10"
K8S_MASTER_VM="k8s_master"
K8S_NODE1_VM="k8s_node1"

MAIN_VDI_XUUBNTU_VM="Xubuntu.vdi"
MAIN_VDI_UBUNTU_SER_VM="Ubuntu_Server.vdi"
MAIN_VDI_WIN10_VM="win-10.vdi"

GENERAL_GROUP_DIR="general"
K8S_GROUP_DIR="k8s"
WIN_GROUP_DIR="windows"

REL_PATH_XUBUNTU_VM="/vm/${GENERAL_GROUP_DIR}/${XUBUNTU_VM}/"
REL_PATH_UBUNTU_SER_VM="/vm/${GENERAL_GROUP_DIR}/${UBUNTU_SER_VM}/"
REL_PATH_K8S_MASTER_VM="/vm/${K8S_GROUP_DIR}/${K8S_MASTER_VM}/"
REL_PATH_K8S_NODE1_VM="/vm/${K8S_GROUP_DIR}/${K8S_NODE1_VM}/"
REL_PATH_WIN10_VM="/vm/${WIN_GROUP_DIR}/${WIN10_VM}/"


# MSI
if blkid --uuid=${DEST_UUID_MSI_GF63} > /dev/null; then
    if [ -d "${MNT_POINT_EXT_DRIVE}" ]; then
        alias up_xubuntu='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_XUBUNTU_VM}; cp --recursive --copy-links ${MSI_SRC_HDD}${REL_PATH_XUBUNTU_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_XUBUNTU_VM}'
        alias up_ubuntu_ser='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_UBUNTU_SER_VM}; cp --recursive --copy-links ${MSI_SRC_HDD}${REL_PATH_UBUNTU_SER_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_UBUNTU_SER_VM}'
        alias up_k8s_master='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_MASTER_VM}; cp --recursive --copy-links ${MSI_SRC_HDD}${REL_PATH_K8S_MASTER_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_MASTER_VM}'
        alias up_k8s_node1='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_NODE1_VM}; cp --recursive --copy-links ${MSI_SRC_HDD}${REL_PATH_K8S_NODE1_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_NODE1_VM}'
        alias up_win10='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_WIN10_VM}; cp --recursive --copy-links ${MSI_SRC_HDD}${REL_PATH_WIN10_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_WIN10_VM}'
        
        # Aliases for download from external HDD
        alias down_xubuntu='cp --recursive --exclude=${MAIN_VDI_XUUBNTU_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_XUBUNTU_VM} ${MSI_SRC_HDD}${REL_PATH_XUBUNTU_VM}; cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_XUBUNTU_VM}${MAIN_VDI_XUUBNTU_VM} ${MSI_SRC_SSD}/vm/${XUBUNTU_VM}'
        alias down_ubuntu_ser='cp --recursive --exclude=${MAIN_VDI_UBUNTU_SER_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_UBUNTU_SER_VM} ${MSI_SRC_HDD}${REL_PATH_UBUNTU_SER_VM}; cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_UBUNTU_SER_VM}${MAIN_VDI_UBUNTU_SER_VM} ${MSI_SRC_SSD}/vm/${UBUNTU_SER_VM}'
        alias down_k8s_master='cp --recursive --exclude=${MAIN_VDI_UBUNTU_SER_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_MASTER_VM} ${MSI_SRC_HDD}${REL_PATH_K8S_MASTER_VM}; cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_MASTER_VM}${MAIN_VDI_UBUNTU_SER_VM} ${MSI_SRC_SSD}/vm/${K8S_MASTER_VM}'
        alias down_k8s_node1='cp --recursive --exclude=${MAIN_VDI_UBUNTU_SER_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_NODE1_VM} ${MSI_SRC_HDD}${REL_PATH_K8S_NODE1_VM}; cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_NODE1_VM}${MAIN_VDI_UBUNTU_SER_VM} ${MSI_SRC_SSD}/vm/${K8S_NODE1_VM}'
        alias down_win10='cp --recursive --exclude=${MAIN_VDI_WIN10_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_WIN10_VM} ${MSI_SRC_HDD}${REL_PATH_WIN10_VM}; cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_WIN10_VM}${MAIN_VDI_WIN10_VM} ${MSI_SRC_SSD}/vm/${WIN10_VM}'
    fi
fi

if blkid --uuid=${DEST_UUID_DELL_INSPIRON_3576} > /dev/null; then
    if [ -d "${MNT_POINT_EXT_DRIVE}" ]; then
        alias up_xubuntu='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_XUBUNTU_VM}; cp --recursive ${DELL_SRC_SSD}${REL_PATH_XUBUNTU_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_XUBUNTU_VM}'
        alias up_ubuntu_ser='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_UBUNTU_SER_VM}; cp --recursive ${DELL_SRC_SSD}${REL_PATH_UBUNTU_SER_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_UBUNTU_SER_VM}'
        alias up_k8s_master='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_MASTER_VM}; cp --recursive ${DELL_SRC_SSD}${REL_PATH_K8S_MASTER_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_MASTER_VM}'
        alias up_k8s_node1='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_NODE1_VM}; cp --recursive ${DELL_SRC_SSD}${REL_PATH_K8S_NODE1_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_NODE1_VM}'
        alias up_win10='mkdir ${MNT_POINT_EXT_DRIVE}${REL_PATH_WIN10_VM}; cp --recursive ${DELL_SRC_SSD}${REL_PATH_WIN10_VM} ${MNT_POINT_EXT_DRIVE}${REL_PATH_WIN10_VM}'

        # Aliases for download from external HDD
        alias down_xubuntu='cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_XUBUNTU_VM} ${DELL_SRC_SSD}${REL_PATH_XUBUNTU_VM}'
        alias down_ubuntu_ser='cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_UBUNTU_SER_VM} ${DELL_SRC_SSD}${REL_PATH_UBUNTU_SER_VM}'
        alias down_k8s_master='cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_MASTER_VM} ${DELL_SRC_SSD}${REL_PATH_K8S_MASTER_VM}'
        alias down_k8s_node1='cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_K8S_NODE1_VM} ${DELL_SRC_SSD}${REL_PATH_K8S_NODE1_VM}'
        alias down_win10='cp --recursive ${MNT_POINT_EXT_DRIVE}${REL_PATH_WIN10_VM} ${DELL_SRC_SSD}${REL_PATH_WIN10_VM}'
   fi
fi